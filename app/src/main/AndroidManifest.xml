<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.DAS.foodchain">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/appicon"
        android:label="DAS_FoodChain"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.example.DAS.foodchain.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.DAS.foodchain.MainActivity" />
        <activity android:name="com.example.DAS.foodchain.ProfileActivity" />
        <activity android:name="com.example.DAS.foodchain.RegisterActivity" />
        <activity android:name="com.example.DAS.foodchain.MenuListActivity" />
        <activity android:name="com.example.DAS.foodchain.CartActivity"></activity>
        <activity android:name="com.example.DAS.foodchain.CurrentOrder"></activity>
        <activity android:name="com.example.DAS.foodchain.OrderHistory"></activity>
        <activity android:name="com.example.DAS.foodchain.SuggestedActivity"></activity>
    </application>

</manifest>